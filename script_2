#!/bin/bash

sudo apt-get update
sudo apt-get upgrade -y
git --version
python3 --version
chromium-browser --product-version

# Necess√°rios para instalar Theia
## NodeJS v8
wget https://nodejs.org/dist/v12.16.3/node-v12.16.3-linux-armv7l.tar.xz
tar xf node-v12.16.3-linux-armv7l.tar.xz
cd node-v12.16.3-linux-armv7l
sudo cp -R * /usr/local/
node -v
npm -v
cd ..
## Yarn
curl -o- -L https://yarnpkg.com/install.sh | bash
source ~/.bashrc
